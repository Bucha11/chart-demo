// Using SQLite for local development by default so migrations work without a PostgreSQL server.
datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Upload {
  id         String   @id @default(cuid())
  filename   String
  size       Int
  mimeType   String
  rowsCount  Int
  createdAt  DateTime @default(now())
  fileHash   String   @unique
  analysis   String?
  rawPreview String?
}
